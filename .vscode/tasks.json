{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "prep-build-dir",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-Command",
        "New-Item -ItemType Directory -Force build | Out-Null"
      ],
      "problemMatcher": []
    },
    {
      "label": "build-proyecto",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-Command",
        "$ErrorActionPreference='Stop'; $src = Get-ChildItem -Path src -Filter *.cpp | ForEach-Object { $_.FullName }; & 'C:/msys64/ucrt64/bin/g++.exe' -std=c++17 -O2 -Iencabezados $src -o build/app.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true },
      "dependsOn": "prep-build-dir",
      "detail": "Compila todos los .cpp con PowerShell (sin usar comodines)."
    }
  ]
}

